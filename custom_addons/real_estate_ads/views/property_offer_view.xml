<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="real_estate_ads_property_offer_view_tree" model="ir.ui.view">
        <field name="name">real_estate_ads.property_offer.tree</field>
        <field name="model">real_estate_ads.property_offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price" />
                <field name="status" />
                <field name="partner_id" />
                <field name="property_id" />
                <field name="creation_date" />
                <field name="validity" />
                <field name="deadline" />
            </tree>
        </field>
    </record>

    <record id="real_estate_ads_property_offer_view_form" model="ir.ui.view">
        <field name="name">real_estate_ads.property_offer.form</field>
        <field name="model">real_estate_ads.property_offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="status" />
                        <field name="partner_id" />
                        <field name="property_id" />
                        <field name="creation_date" />
                        <field name="validity" />
                        <field name="deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
